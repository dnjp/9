bind -a $home/bin/rc /bin
bind -a $home/bin/$cputype /bin
bind -a /$cputype/bin /bin
if(! syscall create /tmp/xxx 1 0666 >[2]/dev/null)
	ramfs	# in case we're running off a cd

font=/lib/font/bit/lucidasans/unicode.8.font

editor=E

# git things
bind $home/lib/profile $home/src/9/lib/profile
bind $home/lib/git $home/src/9/lib/git
# bind $home/bin/rc $home/src/9/bin/rc

# go
GO111MODULE=on
bind -a /sys/lib/go/$cputype/1.15.6/bin /bin

# setup executables
bind -qa $home/bin/rc /bin
bind -qa $home/bin/$cputype /bin

# email
# auth/factotum -g 'proto=pass server=smtp.gmail.com service=smtp user=daniel@martin.ai !password?'
# auth/factotum -g 'proto=pass server=imap.gmail.com service=imap user=daniel@martin.ai !password?'

# start services
ip/ipconfig
webcookies
webfs
plumber

echo -n accelerated > '#m/mousectl'
echo -n 'res 3' > '#m/mousectl'

# sources
9fs 9pio
9fs 9contrib
9fs 9front

# authentication
cat $home/lib/ssh/key >/mnt/factotum/ctl
ssh git@github.com
ssh git@git.sr.ht

fn '..'{ cd .. }
fn h{ cd $home }
fn l{ ls $* }
fn sdf{ ftpfs -a ftp@sdf.org sdf.org }
fn gp{ git/push $* }
fn gs{ git/walk $* | grep '^M' }
fn gc{ git/commit $* }
fn ga{ git/add $* }
fn gr{ 
	for(f in `{git/branch $1 | awk '{print $1}'}){
		git/rm $f
	}
}
fn mar{ cd $home/src/work/martin-bidder }
fn 9mar{ cd /mnt/term/home/daniel/src/work/martin-bidder }
fn per{ cd $home/src/personal }
fn 9per{ cd /mnt/term/home/daniel/src/personal }


switch($service){

case terminal
	if(! webcookies >[2]/dev/null)
		webcookies -f /tmp/webcookies
	webfs
	plumber
	echo -n accelerated > '#m/mousectl'
	echo -n 'res 3' > '#m/mousectl'
	prompt=('term% ' '	')
	fn term%{ $* }
	rio -s -b -i riostart
case cpu
	bind /mnt/term/dev/cons /dev/cons
	bind -q /mnt/term/dev/consctl /dev/consctl
	>[2] /dev/null {
		cp /dev/sysname /mnt/term/dev/label
		if(wsys=`{cat /mnt/term/env/wsys})
			wsys=/mnt/term^$wsys
	} 
	bind -a /mnt/term/dev /dev
	prompt=('; ' '	')
	fn cpu%{ $* }
	rio -s -b -i riostart
case con
	prompt=('cpu% ' '	')
}
